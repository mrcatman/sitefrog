{% set _field = this %}
{% component 'form.field-wrapper' with { field: _field, type: 'input' } %}
    {% block main %}
        <input
            {{ html_attributes({
                id: _field.getId(),
                name: _field.getName(),
                type: _field.getType(),
                value: _field.getValue(),
                class: [  'sf-form__input', 'sf-form__input--' ~ _field.getType()]
            }, _field.getAttrs()) }}
        />
    {% endblock %}
{% endcomponent %}
