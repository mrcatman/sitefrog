<div class="sf-form__field-wrapper {% if this.field.hasErrors() %} sf-form__field-wrapper--with-errors {% endif %}">
    {% if this.field.getLabel() is not null %}
    <label for="{{ this.field.getId() }}" class="sf-form__label">{{this.field.getLabel()}}</label>
    {% endif %}
    <div class="sf-form__field">
        {% block main %}
        {% endblock %}
    </div>
    {% if this.field.hasErrors() %}
    <div class="sf-form__errors">
        {% for error in this.field.getErrors() %}
        <span class="sf-form__error">{{error}}</span>
       {% endfor  %}
    </div>
    {% endif %}
</div>
