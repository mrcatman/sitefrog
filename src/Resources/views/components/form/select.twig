{% set _field = this %}
{% component 'form.field-wrapper' with { field: _field, type: 'select' } %}
    {% block main %}
        <select
            {{ html_attributes({
                id: _field.getId(),
                name: _field.getName(),
                class: ['sf-form__input', 'sf-form__select'],
                multiple:  _field.getMultiple(),
            }, _field.getAttrs()) }}
        >
            {% for value, name in _field.getOptions() %}
            <option value="{{ value }}">{{name}}</option>
            {% endfor %}
        </select>
    {% endblock %}
{% endcomponent %}
