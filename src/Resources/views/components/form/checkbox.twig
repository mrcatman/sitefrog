{% set _field = this %}
{% component 'form.field-wrapper' with { field: _field } %}
    {% block main %}
        <input
            type="checkbox"
            {{ html_attributes({
                id: _field.getId(),
                checked: _field.getValue(),
                name: _field.getName(),
                class: ['sf-form__checkbox'],
            }, _field.getAttrs()) }}
         />
    {% endblock %}
{% endcomponent %}
